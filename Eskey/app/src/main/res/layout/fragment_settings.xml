<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:text="Settings"
        />
    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.wolfie.eskey.view.component.SettingItemBackgroundPic
        android:id="@+id/setting_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/setting_item_viewpager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="480dp"
            android:layout_gravity="center_horizontal"
            />
        <!-- Setting the ViewPager to wrap_content seems to break.
             Even though the content has fixed dimensions, nothing
             is displayed.
        -->
        <RadioGroup
            android:id="@+id/background_radio_group"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            >
            <RadioButton
                android:id="@+id/background_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="12sp"
                android:text="   St Basil's Cathedral 1"
                />
            <RadioButton
                android:id="@+id/background_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   St Basil's Cathedral 2"
                />
            <RadioButton
                android:id="@+id/background_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Tall Trees"
                />
            <RadioButton
                android:id="@+id/background_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Arkhangelsk"
                />
            <RadioButton
                android:id="@+id/background_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Church of The Saviour On Spilt Blood 1"
                />
            <RadioButton
                android:id="@+id/background_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Church of The Saviour On Spilt Blood 2"
                />
            <RadioButton
                android:id="@+id/background_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Cathedral of Immaculate Conception"
                />
            <RadioButton
                android:id="@+id/background_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   The Motherland Calls"
                />
            <RadioButton
                android:id="@+id/background_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Peter and Paul Fortress Spire"
                />
            <RadioButton
                android:id="@+id/background_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Rostov Citadel"
                />
            <RadioButton
                android:id="@+id/background_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Sevastopol Memorial to Scuttled Ships 1"
                />
            <RadioButton
                android:id="@+id/background_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Sevastopol Memorial to Scuttled Ships 2"
                />
            <RadioButton
                android:id="@+id/background_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Valaam Chapel"
                />
            <RadioButton
                android:id="@+id/background_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Valaam Icon"
                />
            <RadioButton
                android:id="@+id/background_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Valaam Monastery 1"
                />
            <RadioButton
                android:id="@+id/background_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="   Valaam Monastery 2"
                />
        </RadioGroup>
    </com.wolfie.eskey.view.component.SettingItemBackgroundPic>

    <com.wolfie.eskey.view.component.SettingItemTimeout
        android:id="@+id/setting_item_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioGroup
            android:id="@+id/timeout_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="120dp"
            >
            <RadioButton
                android:id="@+id/timeout_30_secs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="14sp"
                android:text="     30 seconds"
                />
            <RadioButton
                android:id="@+id/timeout_1_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="     1 minute"
                />
            <RadioButton
                android:id="@+id/timeout_2_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="      2 minutes"
                />
            <RadioButton
                android:id="@+id/timeout_10_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="      10 minutes"
                />
        </RadioGroup>
    </com.wolfie.eskey.view.component.SettingItemTimeout>

    <com.wolfie.eskey.view.component.SettingItemChangePassword
        android:id="@+id/setting_item_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_text_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Confirm password"
                    tools:visibility="visible"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_password_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="10sp"
                android:text="@string/st027"
                />

            <TextView
                android:id="@+id/text_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:paddingTop="10dp"
                android:textSize="14sp"
                tools:text="Mismatched passwords"
                />

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/button_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:visibility="visible"
                    android:text="Change Password" />
                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:visibility="visible"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>
    </com.wolfie.eskey.view.component.SettingItemChangePassword>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            tools:visibility="visible"
            android:text="Close" />
    </LinearLayout>

</LinearLayout>
